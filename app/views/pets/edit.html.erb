<h1>Edit <%= @pet.name %>'s info'</h1>

<form action="/pets" method="post">
  <label for="name">Name:</label><br>
    <input type="text" name="name" placeholder="<%= @pet.name %>"><br>
  <label for="species">Species: </label><br>
    <input type="text" name="species" placeholder="<%= @pet.species %>"><br>
  <label for="breed">Breed: </label><br>
    <input type="text" name="breed" placeholder="<%= @pet.breed %>"><br>
  <label for="age">Age:</label><br>
    <input type="integer" name="age" placeholder="<%= @pet.age %>">
  <input type="submit" value="Submit Changes">
</form>
<br><br>

<form action="/pets/<%= @pet.id %>" method="delete">
  <h3>Remove this pet from your list?</h3>
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input style="background-color:red" type="submit" value="Delete Pet's Info">
</form>
