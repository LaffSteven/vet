<h1>Welcome <%= @user.name %>Edit your user account</h1>

<form action="/users" method="post">
  <label for="name">Name:</label><br>
    <input type="text" name="name" placeholder="<%= @user.name %>"><br>
  <label for="username">Username:</label><br>
    <input type="text" name="username" placeholder="<%= @user.username %>"><br>
  <label for="email">Email:</label><br>
    <input type="text" name="email" placeholder="<%= @user.email %>"><br>
  <label for="password">Password</label><br>
    <input type="password" name="password" placeholder="Password"><br>
  <input type="submit" value="Submit Changes">
</form>
<br><br>

<form action="/users/<%= @user.id %>" method="delete">
  <h3>You can delete your account here:</h3>
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input style="background-color:red" type="submit" value="Delete Account">
</form>
